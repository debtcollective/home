{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@sections/*": ["src/sections/*"],
      "@constants/*": ["src/constants/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "public", ".cache"]
}
